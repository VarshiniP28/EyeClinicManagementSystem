<body>

    <nav class="navbar navbar-expand-lg navbar-light">
		<h3>iCare</h3>
		<ul class="navbar-nav ml-auto">
			<li><a href="/bill">Bill</a></li>
            <li><a href="/">Logout</a></li>
		</ul>
	</nav>

    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Create Bill</h2>
                    <form action="/auth/register" method="POST">
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Patient ID</label>
                                    <input class="input--style-4" type="number" name="patientid">
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Date</label>
                                    <input class="input--style-4" type="date" name="date">
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Consultation Fee</label>
                                    <input class="input--style-4" type="" name="consultationfee">
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Product Fee</label>
                                    <input class="input--style-4" type="text" name="productfee">
                                </div>
                            </div>
                        </div>
                        
                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>
                        </div>

                        {{#if message}}
                            <h4 class="alert alert-danger mt-4">{{message}}</h4>
                        {{/if}}
                    </form>
                </div>
            </div>
        </div>
    </div>

