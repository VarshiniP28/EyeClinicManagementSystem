</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light">
		<h3>iCare</h3>
        <ul class="navbar-nav ml-auto">
			<li><a href="/bill">Bill</a></li>
			<li><a href="/">Logout</a></li>
		</ul>
	</nav>
    {{#each data}}
        <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="invoice-title">
                    <h2>Bill ID: {{this.Bill_ID}}</h2><h3 class="pull-right"></h3>
                </div>
                <hr>
                <div class="row">
                    <div class="col-xs-6">
                        <p><strong>Patient Details:</strong><br>{{this.Patient_Name}} <br>{{this.Contact_No}}<br>Diagnosis info: {{this.Info}}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <address>
                            <strong>Date:</strong><br>
                            {{this.Date}}<br><br>
                        </address>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-5">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>Bill summary</strong></h3>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <td><strong>Type</strong></td>
                                        <td class="text-center"><strong>Price</strong></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Product Fee</td>
                                        <td class="text-center">{{this.Product_Fee}}</td>
                                    </tr>
                                    <tr>
                                        <td>Consultation Fee</td>
                                        <td class="text-center">{{this.Consultation_Fee}}</td>
                                    </tr> 
                                    <tr>
                                        <td>Total Fee</td>
                                        <td class="text-center">{{this.Total_Fee}}</td>
                                    </tr>                                
                            
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    {{/each}}

    <!-- Jquery JS-->
    <script src="/rvendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="/rvendor/select2/select2.min.js"></script>
    <script src="/rvendor/datepicker/moment.min.js"></script>
    <script src="/rvendor/datepicker/daterangepicker.js"></script>

