    <link href="/rvendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="/rcss/main.css" rel="stylesheet" media="all">
    <link rel="stylesheet" href="/cardcss.css">
    <link rel="stylesheet" href="/buttoncss.css">
    <link rel="stylesheet" href="/tablecss.css">
    
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light">
		<h3>iCare</h3>
		<ul class="navbar-nav ml-auto">
      <li><a href="/addorder">Add Order</a></li>
			<li><a href="/">Logout</a></li>
		</ul>
    </nav>
    
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <form action="/auth/searchproduct" method="POST">
                <div class="row row-space">
                    <div class="col-2">
                        <div class="input-group">
                            <label class="label"></label>
                            <input class="input--style-4" type="number" name="searchid" placeholder="Seach with Product ID">
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="input-group">
                            <label class="label"></label>
                            <input class="input--style-4" type="text" name="searchname" placeholder="Search with product name">
                        </div>
                    </div>
                </div>
                <div class="patientbutton">
                    <button class="btn btn--radius-2 btn--blue" type="submit">Search</button>
                </div>
            </form>            
        </div>
        <br><br>
         <div class = "tablediv">
             <table class='table table-striped'>
                <thead>
                    <tr>
                    <th>Product ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Product Image</th>
                    </tr>
                </thead>                
                
                <tbody>
                {{#each data}}
                 <tr>
                 <td>{{this.Product_ID}}</td>
                 <td>{{this.Name}}</td>
                 <td>{{this.Description}}</td>
                 <td>{{this.Price}}</td>
                 <td>
                    <img src="/images/product_images/{{this.Product_Image}}" class="card-img-top" style="width:50%" alt="...">
                 </td>
                </tr>
                {{/each}}
                </tbody>
            </table>
        </div> 

    </div>

    <!-- Jquery JS-->
    <script src="/rvendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="/rvendor/select2/select2.min.js"></script>
    <script src="/rvendor/datepicker/moment.min.js"></script>
    <script src="/rvendor/datepicker/daterangepicker.js"></script>
    

    <!-- Main JS-->
    <script src="/rjs/global.js"></script>
